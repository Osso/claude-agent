# Build worker binary
FROM rust:1.92-bookworm AS builder

WORKDIR /build

# Copy manifests
COPY Cargo.toml Cargo.lock ./
COPY crates/core/Cargo.toml crates/core/
COPY crates/claude/Cargo.toml crates/claude/
COPY crates/server/Cargo.toml crates/server/
COPY crates/worker/Cargo.toml crates/worker/
COPY crates/agents/Cargo.toml crates/agents/
COPY crates/cli/Cargo.toml crates/cli/

# Copy source
COPY crates/ crates/

# Build with cache mounts and incremental compilation
ENV CARGO_INCREMENTAL=1
RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    --mount=type=cache,target=/build/target \
    cargo build --release --package claude-agent-worker && \
    cp target/release/claude-agent-worker /build/claude-agent-worker-bin

# Build CLI tools from git
FROM rust:1.92-bookworm AS cli-builder

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    cargo install --git https://github.com/Osso/gitlab-cli --root /cli && \
    cargo install --git https://github.com/Osso/github-cli --root /cli && \
    cargo install --git https://github.com/Osso/sentry-cli --root /cli

# Build mago PHP linter
FROM rust:1.92-bookworm AS mago-builder

RUN --mount=type=cache,target=/usr/local/cargo/registry \
    --mount=type=cache,target=/usr/local/cargo/git \
    cargo install mago --root /build

# Build jira CLI (Go)
FROM golang:1.24-bookworm AS jira-builder

RUN go install github.com/ankitpokhrel/jira-cli/cmd/jira@latest && \
    cp /go/bin/jira /jira-bin

# Runtime stage with Claude Code
FROM debian:bookworm-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        git \
        curl \
        jq \
        ripgrep \
        php-cli \
        && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude Code)
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI
RUN npm install -g @anthropic-ai/claude-code

# Install Rust toolchain (for cargo check/clippy in reviews)
COPY --from=rust:1.92-bookworm /usr/local/rustup /usr/local/rustup
COPY --from=rust:1.92-bookworm /usr/local/cargo /usr/local/cargo
ENV RUSTUP_HOME=/usr/local/rustup
ENV CARGO_HOME=/usr/local/cargo
ENV PATH="/usr/local/cargo/bin:${PATH}"

# Create non-root user
RUN groupadd -g 1000 app && \
    useradd -u 1000 -g app -s /bin/bash -m app

WORKDIR /app

COPY --from=builder /build/claude-agent-worker-bin /app/claude-agent-worker
COPY --from=cli-builder /cli/bin/gitlab /usr/local/bin/gitlab
COPY --from=cli-builder /cli/bin/github /usr/local/bin/github
COPY --from=cli-builder /cli/bin/sentry /usr/local/bin/sentry
COPY --from=mago-builder /build/bin/mago /usr/local/bin/mago
COPY --from=jira-builder /jira-bin /usr/local/bin/jira

# Claude Code configuration
COPY --chown=app:app worker-home/.claude /home/app/.claude

# Create work directory
RUN mkdir -p /work && chown app:app /work

USER app

# Configure git for the app user
RUN git config --global user.email "claude-agent@globalcomix.com" && \
    git config --global user.name "Claude Agent"

CMD ["/app/claude-agent-worker"]
