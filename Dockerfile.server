# Build stage
FROM rust:1.83-bookworm AS builder

WORKDIR /build

# Copy manifests
COPY Cargo.toml Cargo.lock ./
COPY crates/core/Cargo.toml crates/core/
COPY crates/claude/Cargo.toml crates/claude/
COPY crates/server/Cargo.toml crates/server/
COPY crates/worker/Cargo.toml crates/worker/
COPY crates/agents/Cargo.toml crates/agents/
COPY crates/cli/Cargo.toml crates/cli/

# Create dummy source files to cache dependencies
RUN mkdir -p crates/core/src crates/claude/src crates/server/src crates/worker/src crates/agents/src crates/cli/src && \
    echo "pub fn dummy() {}" > crates/core/src/lib.rs && \
    echo "pub fn dummy() {}" > crates/claude/src/lib.rs && \
    echo "pub fn dummy() {}" > crates/server/src/lib.rs && \
    echo "fn main() {}" > crates/server/src/main.rs && \
    echo "fn main() {}" > crates/worker/src/main.rs && \
    echo "pub fn dummy() {}" > crates/agents/src/lib.rs && \
    echo "fn main() {}" > crates/cli/src/main.rs

# Build dependencies only
RUN cargo build --release --package claude-agent-server && \
    rm -rf crates/*/src

# Copy actual source
COPY crates/ crates/

# Touch source files to invalidate cache
RUN touch crates/*/src/*.rs

# Build the server
RUN cargo build --release --package claude-agent-server

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -g 1000 app && \
    useradd -u 1000 -g app -s /bin/bash app

WORKDIR /app

COPY --from=builder /build/target/release/claude-agent-server /app/

USER app

EXPOSE 8443

CMD ["/app/claude-agent-server"]
